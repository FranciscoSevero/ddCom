@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-app="alarmesApp">
    <div ng-controller="alarmesController">
        <!-- BEGIN PAGE CONTAINER -->
        <div class="page-container">
            <!-- BEGIN PAGE HEAD -->
            <div class="page-head">
                <div class="container">
                    <!-- BEGIN PAGE TITLE -->
                    <div class="page-title">
                        <h1>Monitoramento<small> detalhamento & visualização.</small></h1>
                    </div>
                    <!-- END PAGE TITLE -->

                </div>
            </div>
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
            <div class="container">
                <!-- BEGIN PAGE CONTENT INNER -->
                <div class="row margin-top-20">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption font-dark">
                                <i class="fa fa-building"></i> <span class="caption-subject bold uppercase">Site(s)</span>
                                <span class="caption-helper"></span>
                            </div>
                            <div class="actions">
                                <a class="btn btn-circle btn-icon-only btn-default fullscreen">
                                </a>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="margin-top-10">
                                <div ng-cloak class="row mix-grid">
                                    <div ng-model="models" ng-repeat="model in models">
                                        <div ng-if="model.id_status == 1" class="col-md-2 col-sm-2">
                                            <div style="border:solid;border-color: #DEE0E0; background-color:#cc0000; border-width:thin" class="portlet light pulse" pulse>
                                                <div class="portlet-title">
                                                    <div class="caption caption-md">
                                                        <span class="caption-subject font-grey-steel bold uppercase" ng-bind="model.site"></span>
                                                    </div>
                                                    <div class="actions">
                                                        <a class="btn btn-circle btn-icon-only btn-default" ng-click="detailsAlarme(model)">
                                                            <i class="icon-magnifier"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="portlet-body">
                                                    <div>
                                                        <img style="display:table; margin: 0 auto; width:72px; height:72px" src="~/Content/img/building.png" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div ng-if="model.id_status == null || model.id_status != 1" class="col-md-2 col-sm-2">
                                            <div ng-click="detailsAlarme(model)" style="border:solid;border-color: #DEE0E0;  border-width:thin" class="portlet light">
                                                <div class="portlet-title">
                                                    <div class="caption caption-md">
                                                        <span class="caption-subject theme-font bold uppercase" ng-bind="model.site"></span>
                                                    </div>
                                                </div>
                                                <div class="portlet-body">
                                                    <div>
                                                        <img style="display:table; margin: 0 auto; width:72px; height:72px" src="~/Content/img/building.png" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div ng-model="models" ng-if="models.length < 1 || models == undefined ">
                                        <label style="display:table; margin: 0 auto"><strong>Não há site cadastrado.</strong></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br /><br /><br />
                </div>
                <!-- BEGIN QUICK SIDEBAR -->
                <!-- END QUICK SIDEBAR -->
            </div>
            <!-- END PAGE CONTENT -->
        </div>

        @*Begin modal Loading*@
        <div class="modal fade" data-backdrop="static" id="loading" role="basic" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-body">
                    <img src="~/Content/template/assets/global/img/loading-spinner-grey.gif" alt="" class="loading">

                    <span>
                        &nbsp;&nbsp;Aguarde... Realizando conexão na base Channel Monitor.
                    </span>
                </div>
            </div>
        </div>
        @*END modal Loading*@

        @*BEGIN modal alert cadastro plataforma *@
        <div id="modal-error" data-backdrop="static" class="modal fade" tabindex="-1" role="basic">
            <div style="height:225px" class=" modal-body">
                <div class="portlet light">
                    <div class="portlet-title">
                        <div class="caption font-dark">
                            <i class="fa fa-warning"></i> <span class="caption-subject bold uppercase">Atenção!</span>
                        </div>
                    </div>
                    <div class="modal-body">
                        <p>
                            <strong> <span id="alert-title">Falha: </span></strong> <span id="title-message">Não foi possível conectar na base do Channel Monitor.</span>
                        </p>
                        <br />
                        <p>
                            <span id="title-sub-message">Corrija as informações no arquivo de configuração, em seguida, atualize a página.</span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="window.location.reload();" class="btn btn-default">Atualizar página</button>
            </div>
        </div>
        @*END modal alert cadastro plataforma *@




    </div>

    <script src="~/Scripts/defaults/angular.min.js"></script>
    <script src="~/Scripts/alarme/alarmeApp.js"></script>

    <script src="~/Content/template/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/alarme/alarme.js"></script>
</div>
