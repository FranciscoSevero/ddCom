@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" ng-app="LoginApp">
<!--<![endif]-->

<head>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta content="" name="description" />
    <meta content="" name="author" />

    <title>Channel Monitor V3</title>

    <link rel="shortcut icon" href="favicon.ico" />
    <link href="~/Content/template/assets/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/template/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/template/assets/admin/pages/css/login-soft.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/template/assets/global/css/components.css" id="style_components" rel="stylesheet" type="text/css" />
    <link href="~/Content/template/assets/global/plugins/bootstrap-modal/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/template/assets/global/plugins/bootstrap-modal/css/bootstrap-modal.css" rel="stylesheet" type="text/css" />

</head>

<body ng-controller="Controller" class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <img style="width:300px" src="~/Content/template/assets/global/img/logo-mercury.png" />
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form>
            <h3 class="form-title">Bem-vindo.</h3>

            <div ng-cloak class="alert alert-danger" ng-model="message" ng-show="message != null ? true : false">
                <button class="close" data-close="alert"></button>
                <span ng-model="message" ng-bind="message"></span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Usuário" ng-model="user.name" name="username" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Senha" ng-model="user.pwd" name="password" />
                </div>
            </div>
            <div class="form-actions">
                <button type="button" ng-click="ValidUser(user)" class="btn red pull-right">
                    Acessar <i class="m-icon-swapright m-icon-white"></i>
                </button>
                <br />
            </div>
        </form>
        <!-- END LOGIN FORM -->
    </div>
    <!-- END LOGIN -->
    <div class="logo">
        <img style="width:150px" src="~/Content/template/assets/global/img/all-browers.png" />
    </div>
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        <div class="page-footer-inner">
            2016 &copy; <a href="http://www.ddcom.com.br" style="color:#C40A10" title="ddCom Systems" target="_blank">ddCom Systems</a> All rights reserved
        </div>
    </div>
    <!-- END COPYRIGHT -->
    <!--DOC: Aplly "modal-cached" class after "modal" class to enable ajax content caching-->
    <!-- Begin modal-dialog loading -->
    <div class="modal fade" data-backdrop="static" id="loading" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-body">
                <img src="~/Content/template/assets/global/img/loading-spinner-grey.gif" alt="" class="loading">
                <span>
                    &nbsp;&nbsp;Validando usuário e senha...
                </span>
            </div>
        </div>
    </div>
    <!-- End modal-dialog loading -->
    <!-- /.modal -->
    <script src="~/Scripts/defaults/jquery-1.12.0.min.js"></script>
    <script src="~/Scripts/defaults/angular.min.js"></script>

    <script src="~/Content/template/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/template/assets/global/plugins/backstretch/jquery.backstretch.min.js" type="text/javascript"></script>
    <script src="~/Content/template/assets/global/plugins/bootstrap-modal/js/bootstrap-modalmanager.js" type="text/javascript"></script>
    <script src="~/Content/template/assets/global/plugins/bootstrap-modal/js/bootstrap-modal.js" type="text/javascript"></script>

    <script src="~/Scripts/login/login.js"></script>
    <script src="~/Scripts/login/loginApp.js"></script>


    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js"></script>
</body>
</html>